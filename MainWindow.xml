<?xml version="1.0" encoding="iso-8859-1"?>
<!-- TODO Note: RapaGUI does not let you set the horizontal width of things like text fields -->
<!-- and labels (for reasons I'll never understand), preferring instead to auto-adjust as    -->
<!-- the form is being laid out. This presents a problem because several elemnts are going   -->
<!-- to shift around as their sizes change. It also means that several of the labels which   -->
<!-- are populated at runtime do not display their contents. The only workaround I've come   -->
<!-- up with so far is to put a shitload of spaces into the label at design time, as a sort  -->
<!-- of "placeholder" for the text that will eventually be populated in them, in order to    -->
<!-- size the control properly. This is a shitty hack. But it sort of works and I don't have -->
<!-- a better solution yet. So everywhere you see lots of &#160;, that's what is happening.  -->
<!-- If you have a better solution, feel free to open a PR because I hate this.              -->
<!-- I may also investigate using a different UI framework (MUI Royale? HGUI?). But that     -->
<!-- means refactoring a ton of code. So that will have to wait.                             -->
<application id="moweather">
    <menubar id="mnuApp">
        <menu title="File">
            <item id="mnuAbout">About...</item>
            <item id="mnuQuit">Quit</item>
        </menu>
        <menu title="Settings">
            <item id="mnuPreferences">Preferences...</item>
        </menu>
    </menubar>
    <window title="MOWeather" menubar="mnuApp" width="734" height="681">
        <vgroup>
            <vgroup halign="Left" frame="true" frametitle="Location">
                <hgroup>
                    <label align="Left">City:&#160;</label>
                    <textentry id="teCity"/>
                    <hspace/>
                    <button id="btnSelectLoc">Select Location</button>
                </hgroup>
                <hgroup>
                    <label align="Left">State Code:&#160;</label>
                    <textentry id="teStateCode"/>
                    <label>Country Code:</label>
                    <textentry id="teCountryCode"/>
                    <hspace/>
                    <button id="btnGetWeather">Get Weather</button>
                </hgroup>
                <hgroup>
                    <label align="Left">Latitude:&#160;</label>
                    <label align="Left" id="lblLatitude">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                    <hspace/>
                    <label align="Left">Progress:</label>
                </hgroup>
                <hgroup>
                    <label align="Left">Longitude:&#160;</label>
                    <label align="Left" id="lblLongitude">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                    <hspace/>
                    <progressbar id="pbProgress"/>
                </hgroup>
            </vgroup>
            <vgroup halign="Left" frame="true" frametitle="Current Conditions">
                <vgroup>
                    <hgroup halign="Left">
                        <label align="Left">Right Now:&#160;</label>
                        <label align="Left" id="lblRightNow">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                    </hgroup>
                </vgroup>
                <vgroup>
                    <hgroup>
                        <vgroup halign="Left">
                            <hgroup halign="Left">
                                <label align="Left">Temperature:&#160;</label>
                                <label align="Left" id="lblTemp">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                            <hgroup>
                                <label align="Left">High:&#160;</label>
                                <label align="Left" id="lblHighTemp">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                                <label align="Left">Low:&#160;</label>
                                <label align="Left" id="lblLowTemp">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                            <hgroup>
                                <label align="Left">Humidity:&#160;</label>
                                <label align="Left" id="lblHumidity">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                            <hgroup>
                                <label align="Left">Cloudiness:&#160;</label>
                                <label align="Left" id="lblCloudiness">&#160;&#160;&#160;&#160;&#160;&#160;&#160;0%&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                            <hgroup>
                                <label align="Left">Rain:&#160;</label>
                                <label align="Left" id="lblRain">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                            <hgroup>
                                <label align="Left">Sunrise:&#160;</label>
                                <label align="Left" id="lblSunrise">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                        </vgroup>
                        <hspace width="50"/>
                        <vgroup halign="Left">
                            <hgroup halign="Left">
                                <label align="Left">Feels Like:&#160;</label>
                                <label align="Left" id="lblFeelsLike">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                            <hgroup>
                                <label align="Left">Pressure:&#160;</label>
                                <label align="Left" id="lblPressure">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                            <hgroup>
                                <label align="Left">Visibility:&#160;</label>
                                <label align="Left" id="lblVisibility">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                            <hgroup>
                                <label align="Left">Wind:&#160;</label>
                                <label align="Left" id="lblWind">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                            <hgroup>
                                <label align="Left">Snow:&#160;</label>
                                <label align="Left" id="lblSnow">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                            <hgroup>
                                <label align="Left">Sunset:&#160;</label>
                                <label align="Left" id="lblSunset">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
                            </hgroup>
                        </vgroup>
                        <hspace width="50" />
                        <vgroup>
                            <image id="imgCondition" brush="2"/>
                        </vgroup>
                    </hgroup>
                </vgroup>
            </vgroup>
            <vgroup halign="Center" frame="true" frametitle="5-Day Forecast">
                <hgroup>
                    <vgroup halign="Center">
                        <label align="Center" id="lblDay1">Day 1</label>
                        <image id="imgDay1Cond" brush="2"/>
                        <label align="Center" id="lblDay1Cond">Condition</label>
                        <label align="Center" id="lblDay1Temps">Temps</label>
                    </vgroup>
                    <vgroup>
                        <label align="Center" id="lblDay2">Day 2</label>
                        <image id="imgDay2Cond" brush="2"/>
                        <label align="Center" id="lblDay2Cond">Condition</label>
                        <label align="Center" id="lblDay2Temps">Temps</label>
                    </vgroup>
                    <vgroup>
                        <label align="Center" id="lblDay3">Day 3</label>
                        <image id="imgDay3Cond" brush="2"/>
                        <label align="Center" id="lblDay3Cond">Condition</label>
                        <label align="Center" id="lblDay3Temps">Temps</label>
                    </vgroup>
                    <vgroup>
                        <label align="Center" id="lblDay4">Day 4</label>
                        <image id="imgDay4Cond" brush="2"/>
                        <label align="Center" id="lblDay4Cond">Condition</label>
                        <label align="Center" id="lblDay4Temps">Temps</label>
                    </vgroup>
                    <vgroup>
                        <label align="Center" id="lblDay5">Day 5</label>
                        <image id="imgDay5Cond" brush="2"/>
                        <label align="Center" id="lblDay5Cond">Condition</label>
                        <label align="Center" id="lblDay5Temps">Temps</label>
                    </vgroup>
                    <vgroup>
                        <button id="btnFetch">Fetch</button>
                    </vgroup>
                </hgroup>
            </vgroup>
            <vgroup>
                <hgroup>
                    <texteditor id="teLog" align="left" width="728" height="95" readonly="true"></texteditor>
                </hgroup>
            </vgroup>
        </vgroup>
    </window>
    <window id="winPrefs" title="Preferences" width="912" height="300" open="False">
        <vgroup halign="Left">
            <hgroup halign="Left">
                <label align="Left">API Host:&#160;</label>
                <textentry id="tePrefsApiHost"/>
            </hgroup>
            <hgroup halign="Left">
                <label align="Left">Port:&#160;</label>
                <textentry id="tePrefsApiPort"/>
            </hgroup>
            <vspace/>
            <hgroup halign="Right">
                <hspace width="400"/>
                <button id="btnPrefsCancel">Cancel</button>
                <button id="btnPrefsSave">Save and Close</button>
            </hgroup>
        </vgroup>
    </window>
    <window id="winSelLoc" title="Select Location" width="840" height="508" open="False">
        <vgroup>
            <hgroup>
                <label align="Left">City/Location Name:&#160;</label>
                <textentry id="teSelCity"/>
            </hgroup>
            <hgroup>
                <label align="Left">State Code:&#160;</label>
                <textentry id="teSelStateCode"/>
                <label align="Left">Country Code:&#160;</label>
                <textentry id="teSelCountryCode"/>
            </hgroup>
            <hgroup>
                <label align="Left">Latitude:&#160;</label>
                <label align="Left" id="lblSelLat">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
            </hgroup>
            <hgroup>
                <label align="Left">Longitude:&#160;</label>
                <label align="Left" id="lblSelLon">&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</label>
            </hgroup>
            <hgroup>
                <hspace/>
                <button id="btnSelSearch">Search</button>
                <hspace/>
            </hgroup>
            <vgroup halign="Left">
                <label align="Left">Use Location:</label>
                <combobox id="cbSelLocation"/>
                <vspace/>
            </vgroup>
            <hgroup halign="Left">
                <button id="btnSelAccept">Accept</button>
                <button id="btnSelCancel">Cancel</button>
            </hgroup>
        </vgroup>
    </window>
</application>
